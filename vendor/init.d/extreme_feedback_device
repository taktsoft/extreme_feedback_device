#!/bin/sh
### BEGIN INIT INFO
# Provides: extreme_feedback_device
# Required-Start: $local_fs $remote_fs $network $syslog
# Required-Stop: $local_fs $remote_fs $network $syslog
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: Extreme Feedback Device -- Control
### END INIT INFO

DESC="Extreme Feedback Device -- Control"
NAME=extreme_feedback_device
SCRIPTNAME=/etc/init.d/$NAME
DAEMON=extreme_feedback_device_control
USER=foo
VERBOSE=yes

# Define LSB log_* functions.
# Depend on lsb-base (>= 3.0-6) to ensure that this file is present
. /lib/lsb/init-functions

#
# Function that starts the daemon/service
#
do_start ()
{
  su - ${USER} -c "${DAEMON} start -- --mode loop"

  [ "$?" -gt 0 ] && return 1
  return 0
}

#
# Function that stops the daemon/service
#
do_stop()
{
  su - ${USER} -c "${DAEMON} stop"

  [ "$?" -gt 0 ] && return 1
  return 0
}

#
# Function that asks status of the daemon/service
#
do_status()
{
  su - ${USER} -c "${DAEMON} status"

  [ "$?" -gt 0 ] && return 3
  return 0
}

case "$1" in
  start)
    [ "$VERBOSE" != no ] && log_daemon_msg "Starting $DESC" "$NAME"
    do_status
    case "$?" in
      3)
        do_start
        ENDVAL="$?"
        ;;
      0)
        ENDVAL="0"
        ;;
      *)
        ENDVAL="1"
        ;;
    esac
    [ "$VERBOSE" != no ] && log_end_msg $ENDVAL
  ;;
  stop)
    [ "$VERBOSE" != no ] && log_daemon_msg "Stopping $DESC" "$NAME"
    do_status
    case "$?" in
      3)
        ENDVAL="0"
        ;;
      0)
        do_stop
        ENDVAL="$?"
        ;;
      *)
        ENDVAL="1"
        ;;
    esac
    [ "$VERBOSE" != no ] && log_end_msg $ENDVAL
    ;;
  status)
    [ "$VERBOSE" != no ] && log_daemon_msg "Status $DESC" "$NAME"
    do_status
    [ "$VERBOSE" != no ] && log_end_msg $?
    ;;
  restart)
    [ "$VERBOSE" != no ] && log_daemon_msg "Restarting $DESC" "$NAME"
    do_stop
    case "$?" in
      0)
        do_start
        ;;
    esac
    [ "$VERBOSE" != no ] && log_end_msg $?
    ;;
  *)
    echo "Usage: $SCRIPTNAME {start|stop|restart|status}" >&2
    exit 3
    ;;
esac